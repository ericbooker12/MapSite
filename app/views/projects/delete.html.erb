<div class="projects delete">
	<h2>Delete Project</h2>

	<%= form_for(@project, :method => 'DELETE') do |f| %>
			<p>Are you sure you want to delete this item? This operation cannot be reversed.</p>

			<p class="reference-name"><%= f.object.name %></p>

			<div class="form-buttons">
				<%= f.submit("Delete") %>
			</div>

	<% end %>

</div>