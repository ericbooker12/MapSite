<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1></h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project Number</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>County</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name  %></td>
        <td><%= project.project_number  %></td>
        <td><%= project.address ? word_wrap(project.address, line_width: 2) : ''  %></td>
        <td><%= project.city  %></td>
        <td><%= project.state  %></td>
        <td><%= project.zip_code %></td>
        <td><%= project.county  %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_project_path %>
