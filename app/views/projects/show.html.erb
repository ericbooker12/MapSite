<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class='project show'>

	<section class="show-container">
		<article class="info-card">
			<h2><%= @project.name %></h2>

			<table summary="subject detail view">
				<tr>
					<th align="left">Project:</th>
					<td><%= @project.project_number %></td>
				</tr>
				<tr>
					<th align="left">Address:</th>
					<td><%= @project.address %></td>
				</tr>
				<tr>
					<th align="left">City:</th>
					<td><%= @project.city %></td>
				</tr>
				<tr>
				<tr>
					<th align="left">State:</th>
					<td><%= @project.state %></td>
				</tr>
				<tr>
				<tr>
					<th align="left">County:</th>
					<td><%= @project.county %></td>
				</tr>
				<tr>

			</table>

			<%= link_to "Edit", edit_project_path(params[:id]), :class => 'edit_link'  %>

		</article>

		<article class="reports-card">
			<div><%= @project.files.count %> files uploaded</div>

			<ul>
				<% @project.files.each do |file| %>
					<li><%= link_to file.filename, file, target: :blank %> </li>
				<% end %>
			</ul>




		</article>

		<article class="map-card">
			<div id="map"></div>
			<span id='coords'>
				<span id='lat'> <%= @project.latitude %></span>, <span id='lng'> <%= @project.longitude %></span>
			</span>
		</article>



	</section>



</div>

<%= link_to "Back", projects_path, :class => 'back_link' %> |
